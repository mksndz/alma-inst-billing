<p id="notice"><%= notice %></p>

<h1>Listing Contacts for <%= @institution.name %></h1>

<div class="table-responsive">
  <table class="table">
    <thead class="thead-default">
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.phone %></td>
          <td><%= contact.email %></td>
          <td><%= link_to 'Show', institution_contact_path(@institution, contact) %></td>
          <td><%= link_to 'Edit', edit_institution_contact_path(@institution, contact) %></td>
          <td><%= link_to 'Destroy', institution_contact_path(@institution, contact), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Add Contact', new_institution_contact_path(@institution), class: 'btn btn-outline-primary' %>
